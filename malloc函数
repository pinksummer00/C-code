#include <stdio.h>
#include<stdlib.h>
#include <string.h>
#include<errno.h>
int main()
{
	int* p = (int*)malloc(10 * sizeof(int));//向内存申请10个整型的空间
	if (p == NULL)
	{
		printf("%s\n", strerror(errno));//打印错误原因的一个方式
	}
	else
	{
		int i = 0;
		for (i = 0;i < 10;i++)//正常使用空间
		{
			*(p + i) = i;
		}
		for (i = 0;i < 10;i++)
		{
			printf("%d ", *(p + i));
		}
	}
	free(p);//当动态内存不再使用的时候应该还给操作系统
	p = NULL;
	return 0;
}
