#include <stdio.h>
int main()
{
	int a = 1;
	int b = a << 1; //移位操作符，移的是二进制位
	printf("b=%d\n", b);
	return 0;
}


#include <stdio.h>
int main()
{
	int a = 3;
	int b = 5;
	int c = a & b; //按位与&，按位或|，按位异或^
	printf("c=%d\n", c);
	return 0;
}


#include <stdio.h>
int main()
{
	int a = 10;
	int b = 20;
	int c = a + b; //双目操作符
	printf("c=%d\n", c);
	printf("%d\n", !a);//逻辑反操作
	return 0;
}


#include <stdio.h>
int main()
{
	int a = 10;
	int arr[] = { 1,2,3,4,5,6 };
	printf("%d\n", sizeof(a)); //计算a大小
	printf("%d\n", sizeof(int)); //计算整型大小
	printf("%d\n", sizeof(arr)); // 计算数组大小
	printf("%d\n", sizeof(arr)/sizeof(arr[0]));// 计算元素个数
	return 0;// sizeof是单目操作符，以字节为单位
}


#include <stdio.h>
int main()
{
	int a = 0;
	int b = ~a;// ~是单目操作符，按位取反
	printf("%d\n", b);
	return 0;
}


#include <stdio.h>
int main()
{
	int a = 10;
	int b = a++; //单目操作符 ++和--
	/*int b = ++a;
	int b = a--;
	int b = --a;*/
	printf("a=%d b=%d\n", a, b);
	return 0;
}


#include <stdio.h>
int main()
{
	int a = 10;
	int b = 20;
	int max = 0;
	max = (a > b ? a : b); //条件操作符
	printf("max=%d\n", max);
	return 0;
}
