#include <stdio.h>
#include<math.h>
int main()
{//判断i是否为水仙花数（自幂数）
 //水仙花数是指一个 3 位数，它的每个数位上的数字的 3次幂之和等于它本身。例如：1^3 + 5^3+ 3^3 = 153。
	int i = 0;
	for (i = 0; i <= 100000; i++)
	{
		int n = 1;
		int tmp = i;
		int sum = 0;
		while (tmp /= 10)//1.计算i的位数 n位数
		{
			n++;
		}
		tmp = i;
		while (tmp)//2.计算i的每一位的n次方之和sum
		{
			sum += pow(tmp % 10, n);//pow函数是求次方
			tmp /= 10;
		}
		if (i == sum)//3.比较i和sum
		{
			printf("%d ", i);
		}
	}
	return 0;
}
