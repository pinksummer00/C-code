#include <stdio.h>
int main()
{
	char ch = 'a';
	char* pc = &ch;//有一种变量是专门用来存放地址的，这种就称为指针变量
	*pc = 'a';//解引用操作符，对p进行解算，找到a的值
	printf("%d\n", ch);//输出a所对应的字符
	return 0;
}


#include <stdio.h>
int main()
{
	double d = 3.14;
	double* pd = &d;
	*pd = 5.5;
	printf("%lf\n", d);
	printf("%lf\n", *pd);
	return 0;
}
