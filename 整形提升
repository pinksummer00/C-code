#include<stdio.h>
int main()
{
	short s = 0;
	int a = 10;
	printf("%d\n", sizeof(s = a + 5));//整形提升
	printf("%d\n", s);
	return 0;
}




#include<stdio.h>
int main()
{
	char a = 0xb6;//16进制 0-9 a b c d e f 
	short b = 0xb600;
	int c = 0xb6000000;
	if (a == 0xb6)
		printf("a"); //整形提升
	if (b == 0xb600)
		printf("b"); //整形提升
	if (c == 0xb6000000)
		printf("c");
	return 0;
}
