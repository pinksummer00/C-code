#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
	char input[20] = { 0 };
	system("shutdown -s-t 60"); //system是执行命令函数
	again:
	printf("请注意：您的电脑将在60秒后关机，如果输入 我是猪 就取消关机\n请输入：");
	scanf("%s",&input);
	if (strcmp(input, "我是猪") == 0) //strcmp是字符串比较函数
	{
		system("shutdown -a -t 60"); //取消关机
	}
	else
	{
		goto again;
	}
	return 0;
}
