#include<stdio.h>
#include<assert.h>
char* my_strcpy(char* arr1, const char* arr2)//const放在*左边时，不能通过地址去改变变量的值
{
	char* ret = arr1;
	assert(arr1 != NULL);//断言
	assert(arr2 != NULL);//断言
	while (*arr1++ = *arr2++)//把arr2指向的字符串拷贝到arr1指向的空间，包含'\0'字符
	{
		;
	}
	return ret;
}
int main()
{
	char arr1[] = "##########";
	char arr2[] = "bit";
	printf("%s\n", my_strcpy(arr1, arr2));//链式访问
	return 0;
}
