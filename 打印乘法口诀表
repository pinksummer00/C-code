#include<stdio.h>
int main()
{
	int i = 0;
	for (i = 1; i <= 9; i++) //打印9行乘法口诀表
	{
		//打印一行
		int j = 1;
		for (j = 1; j <= i; j++)
		{
			printf("%d*%d=%-4d", i, j, i * j); //-4d是右对齐，打印4位，不够4位补空格
		}
		printf("\n");
	}
	return 0;
}




#include<stdio.h>
void Print_table(int n)
{
	int i = 0;
	for (i = 1; i <= n; i++)
	{
		int j = 0;
		for (j = 1; j <= i; j++)
		{
			printf("%d*%d=%-3d", i,j,i * j);
		}
		printf("\n");
	}
}
int main()
{
	int n = 0;
	scanf("%d", &n);//输入几就打印几几乘法口诀表
	Print_table(n);
	return 0;
}
